{
  "manifest_version": 2,
  "name": "AI Chat Downloader",
  "version": "1.3.3",
  "description": "Download conversations from ChatGPT, Claude, and Poe",
  "permissions": [
    "activeTab",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://poe.com/*",
    "clipboardWrite"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://claude.ai/*", "https://poe.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "aichatdl@fmuk.github.io"
    }
  }
}
